
<div class="container">
    <br>

    <div class="row   align-self-start" id="toprow2">




        <div class="col-md-10" id="newScrape">
            <div class="card border border-success  orderlabel">
                <h1 class="title"> Mongo Scrape Articles</h1>
                <h6 class="title">Mongo.DB Demo , Web Scraping </h6>
                <form>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Article Title</label>
                        <input type="text" class="form-control" id="inputtitle" placeholder="title">
                    </div>


                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Note</label>
                        <textarea class="form-control" id="inputnote" rows="3"></textarea>

                    </div>
                    <button class="btn btn-primary" id="savenote" data-mongoid="">Save Note</button>
                </form>

            </div>


        </div>

        <div class="col-md-2">

        </div>

    </div>

    <br>
    <div class="row   align-self-start" id="toprow1">

        <div class="col-md-10 text-center my-auto " id="availableArt">

            <div class="card border border-success  " style="height:115px;">

                <h1>Listed Articles</h1>

                <div class="button-box">
                <button class="btn btn-info" id="btnJSONART" role="button">JSON
                    Articles</button>
                    <button class="btn btn-info" id="btnJSONnote" role="button">JSON Notes</button>

                </div>
            </div>
            <br>
            <ul>
                {{#each article}}


                <div class="card border border-success ready" id={{this._id}}>
                    <div class="card  h-100 mb-4">
                        <div class="card-block">
                            <p class="card-text"><span><b>ID: </b> </span>{{this._id}} </p>
                            <p class="card-text"><span> <b>Article Title:</b></span> {{ this.title}}</p>


                            <p class="card-text"><span><b>Article Link:</b></span> <a href="{{this.link}}"
                                    target="_blank">Link </a>

                                <p class="card-text"><span> <b>blurb:</b></span> {{ this.blurb}}</p>

                             <button type="button" class="btn btn-info btnaddtitle" data-myval="{{this._id}}"
                                    data-mytitle=" {{ this.title}}">Add Note</button> 

                                <br>

                                <p class="card-text"><span> <b>Note:</b></span>"{{ note.body}}"</p>
                       <button type="button" class="btn btn-info btndelnote" data-myval="{{note._id}}"
                                    >Delete Note</button> 


                        </div>
                    </div>
                </div>

                <br>

                {{/each}}
            </ul>

        </div>

        <div class="col-md-2" id="savednotes">








        </div>

    </div>

    <div class="row   align-self-start" id="toprow3">

        <div class="col-md-2">


        </div>


        <div class="col-md-8" id="deletediv">


        </div>

        <div class="col-md-2">

        </div>


    </div>

</div>



